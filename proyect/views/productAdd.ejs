    <link rel='stylesheet' href='/stylesheets/productAdd.css'>


    <link rel="stylesheet" href="/stylesheets/productAdd.css">
   
    
</head>
  <body>
    <%- include('partials/header.ejs') %>
    <div class="container-fluid">
        <div class="row">
            
            <div class="col-md-4 col-sm-4 colx-xs-12"> 
                <h5>Añadir Producto</h5>
    
            <div class="textbox">
                <i class="fas fa-box-open"></i>
                <input type="text" placeholder="Nombre del Producto" name="" value="">
            </div>
            <div class="textbox">
                <i class="fas fa-tshirt"></i>
                <input type="text" placeholder="Articulo del Producto" name="" value="">
            </div>
            <div class="textbox">
                <i class="fas fa-dollar-sign"></i>
                    <input type="text" placeholder="Precio" name="" value="">
                </div>
            <div class="textbox">
                <i class="fas fa-comment-alt"></i>
                <textarea name="descripcion" id="" cols="25" rows="3" placeholder="Escribe la descripcion del producto" type="text"></textarea>
                </div>
            <div class="textbox">
                <i class="fas fa-image"></i>
                <label for="imagen">Imagen del Producto:</label>
                <input type="file" id="imagen" name="imagen" accept="image/png, image/jpeg"/>
            </div>
    
            <div>
                <input type="button" class="btn" name="" value="Añadir Producto">
            </div>
             
            </div>
            
        </div>
       
        </div>
       
        
       
    </div> 
    <%- include('partials/footer.ejs') %>
    
           
    
