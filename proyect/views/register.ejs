    <title>FRESH | Register</title>
</head>
<body>
    <div><%- include('partials/header.ejs') %></div>
<div class="container-fluid">
    <div class="row">
        
        <div class="col-md-4 col-sm-4 colx-xs-12"> 
            <h1>Regístrate</h1>

        <div class="textbox">
            <i class="fa fa-user-circle" aria-hidden="true"></i>
            <input type="text" placeholder="Nombre y apellido" name="" value="">
        </div>
        <div class="textbox">
            <i class="fas fa-at"></i>
            <input type="email" placeholder="Correo Electronico" name="" value="">
        </div>
        <div class="textbox">
            <i class="fa fa-lock" aria-hidden="true"></i>
                <input type="password" placeholder="Contraseña" name="" value="">
            </div>
        <div class="textbox">
             <i class="fa fa-lock" aria-hidden="true"></i>
                 <input type="password" placeholder="Confirmar Contraseña" name="" value="">
            </div>
        <div class="textbox">
            <i class="fas fa-calendar-alt"></i>
            <input  type="date" placeholder="Fecha de nacimiento" value="" name="dateOfBirth"  autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" data-ddlabel="dd" data-mmlabel="mm" data-yyyylabel="aaaa">
        </div>
        <div class="textbox">
            <i class="fas fa-phone-alt"></i>
            <input type="number" placeholder="Número de teléfono" name="" value="">
        </div>
        <div>
            <input type="button" class="btn" name="" value="Regístrate">
        </div>

        </div>
        <div class="col-md-4 col-sm-4 colx-xs-12"></div>
    </div>
   
        <%- include('partials/footer.ejs') %> 
   
</div> 
</body>
